    if (target == hover) {exit}
    if hover.type == "order" { with hover {scr_order("add")} }
} else
//Press Empty
if (mouse_check_button_pressed(mb_left) &amp;&amp; hover == "none") || (mouse_check_button_pressed(mb_left) &amp;&amp; point_distance(x,y,home_x,home_y) &gt; owner.reach &amp;&amp; !place_meeting(x,y,obj_orderbox)) {
