                }
        
        
        // if order
        if (hover.type == "order") {with hover {scr_order("add")} }
    }
}

//Press Empty
if (mouse_check_button_pressed(mb_left) &amp;&amp; hover == "none") {

    hover = "none"
    target = "none"
    state = "none"
}
