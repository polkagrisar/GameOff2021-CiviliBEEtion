                target = hover
                state = "orders"
                with hover {scr_create_objectboxes()}
                }
           
            //If opponent hive
            if (hover.type == "hive" &amp;&amp; hover.p_id != p_id) {
                target = hover
                state = "orders"
                
                with hover {scr_create_objectboxes()}
            }
        }
    }
}

// Press order

