if (mouse_check_button_pressed(mb_left)) {
    if (hover != "none") {
        if (target == hover) {exit}
        
        //If Flower / Rock / Anything on the space-object
        if (hover.type == "flower" || hover.type == "rock") { 
            target = hover
            state = "orders"
            with hover { scr_create_objectboxes() }
            }
        
       
        //If opponent hive
